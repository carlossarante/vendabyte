@font-face
  font-family 'icomoon'
  src url('../fonts/icomoon.eot?b9a0gt')
  src url('../fonts/icomoon.eot?#iefixb9a0gt') format('embedded-opentype'),
    url('../fonts/icomoon.woff?b9a0gt') format('woff'),
		url('../fonts/icomoon.ttf?b9a0gt') format('truetype'),
		url('../fonts/icomoon.svg?b9a0gt#icomoon') format('svg')
  font-weight normal
  font-style normal

[class^="icon-"], [class*=" icon-"]
  font-family 'icomoon'
  speak none
  font-style normal
  font-weight normal
  font-variant normal
  text-transform none
  line-height 1
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale

.icon-bubble
  &:before
    content "\e600"

.icon-heart
  &:before
    content "\e601"

.icon-share
  &:before
    content "\e602"

.icon-plus
  &:before
    content "\e603"

