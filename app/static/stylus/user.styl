@import "normalize.styl"
@import "icomoon.styl"
@import "nib"
@import url(http://fonts.googleapis.com/css?family=Ultra);

verde-claro = rgb(79,216,0)
verde-titulos= rgb(145,180,64)
verde-oscuro = rgb(29,118,60)
verde-deco = rgb(200,216,0)
gris-claro = rgb(236,242,238)
gris-medio = rgb(148,158,147)
gris-oscuro = rgb(66,68,65)
mamei = rgb(255,206,0)
crema = rgb(249,234,216)

body 
	background gris-claro
	font-size 16px
	font-family: 'Ultra', 'serif';

a 
	text-decoration none

.header 
	z-index 5
	width 100%
	height 45px
	background verde-claro
	
	.logo-cont
		left 15%
		display inline-block
		
		.logo 
			width 200px
	.log-in
		position absolute
		right 20%
		top 0px
		background-color blue
		color white
		padding 10px 5px 5px 5px
		box-shadow 0px 0px 5px black
		font-size 1.2rem
	.search
		background-color blue
		color white
		font-size 1.2rem
		width 400px
		display inline-block

.portada-cont
	width 100%
	height 210px
	z-index 3

	.portada
		width 100%
		height 100%

.wrapper
	width 100%
	max-width 1024px
	margin 0 auto	
	border-right 1px solid gris-medio
	background-color white
	font-size 0rem
	z-index 4



.load-sect
	width 50%
	border-right 1px solid gris-medio
	background-color gris-claro
	text-align center
	
	.badgets-cont
		display inline-block
		width 96%
		margin 30 0 20 0
		padding 0
		box-shadow 0px 0px 5px gris-medio
		font-size 1rem

		.badget-tittle
			position absolute
			color verde-titulos
			font-size 1.5rem
			font-weight bold
			bottom 100%


		.badget
			width 6.144rem
			height 6.144rem
			background-color verde-claro
			color white
			line-height 6.144rem
			border-radius 50%
			margin 1rem 1.8432rem
			display inline-block
			vertical-align top
			cursor pointer


	.options-menu
		display inline-block
		width 96%
		margin 0
		padding 0
		.options
			display inline-block
			font-size 1.2rem
			height 170px
			width 157.2864px
			background-color gris-claro
			box-shadow 0px 0px 5px gris-medio
			margin-right 2%
			margin-bottom 2%
			cursor pointer
			transition all 0.3s
			&:nth-child(3n+3)
				margin-right 0px
			&:hover
				background-color verde-claro
				box-shadow 0px 0px 0px gris-medio
				color white
				.icon
					background-color white
					color verde-claro
				.option 
					color white
			.icon
				width 100px
				height 100px
				line-height 100px
				border-radius 50%
				background-color verde-claro
				color white
				margin 0 auto
				margin-top 28.6432px
				transition all 0.3s
			.option
				position relative
				color verde-claro
				top 15px
				font-weight bold
				transition all 0.3s
.user-cont
	width 96%
	text-align right
	top 10px

	div
		width 57.5%
		font-size 0rem	
		text-align left	

		&:first-child
			width 40%
			position absolute
			bottom 0%
			left 0
			z-index 100
			border 2px solid white

		.user-name
			font-size 1.5rem
			font-weight bold
			margin-top 15px
		.icon-star
				margin-right 0.2rem
				font-size 1rem
				cursor pointer
				&:hover
					color yellow
		#deco1
			margin-right 1%
		.deco-count
			width 48.5%	
			padding 0.5% 
			padding-bottom 0
			margin-top 5px
			.following-count
			.followers-count
			.following
			.followers
				font-size 1.5rem
				line-height normal
					
.caja
	box-shadow 0 0 5px black
	margin 20px 0px
	width 96%
	display inline-block
	position relative

	.deco
		border 3px solid gris-medio
		width 96%
		height 95%
		top 0
		margin-left 2%
		position absolute
		display block
		border-style dashed

.file-browse
	height 150px
	text-align center
	font-size 1rem
	
	span
		width 100%
		line-height 150px
		text-align center
		font-size 1.2rem

	input
		font-size 0.5rem;
		color white
		top -50px
		cursor pointer
.offers-sect
	top 0
	right 0
	font-size 1rem
	height auto
	text-align center
	width 50%
	vertical-align top
	background-color white


.sign-in
	height 75px
	text-align center

	span
		line-height 75px

.products
	width 96%
	margin 0 auto
	margin-top 20px
	.product
		text-align left
		overflow hidden
		margin-bottom 20px
		.user
			width 16%
			overflow hidden
			vertical-align top

		.art-cont
			width 81%
			float right
			color verde-titulos

			.description 
				margin 0

			.art-desc
				margin-top 5px
				margin-bottom 3px
				width 100%
				font-size 0rem

				.art-pict
					width 100%

					img
						width 100%
				.actions
					width 100%
					background-color verde-claro
					height 30px
					color white

					.action
						text-align right
						line-height 30px
						font-size 1.3rem
						margin 0 10px
						float right
						cursor pointer

					.interest
						cursor pointer
						font-size 1rem
						padding 2px
						margin-left 10px
						background-color white
						line-height 30px
						color verde-claro
				
				.precio
					font-size 1rem
					top 10px
					padding 5px 10px
					right -5px
					color gris-oscuro
					background-color gris-claro
					box-shadow 0 0 10px gris-oscuro
					opacity 0.98

				.add-cart
					font-size 2.5rem
					bottom 40px
					right 10px
					color verde-claro
					cursor pointer
			
			.comment
				background-color gris-claro
				margin-bottom 3px

				.user
					width 10%
					margin-top 2%
					margin-left 2%
					vertical-align top
				div
					margin-top 2%
					width 86%
					padding-bottom 5px
					.person
						color verde-titulos
					.fecha
						color gris-medio
						position relative
						top 5px
					.opinion
						margin 0
						color gris-oscuro

.followers-sect
	font-size 0rem
	text-align left
	width 30.72rem
	margin 0 auto
	margin-top 20px

	.follower-cont
		width 15.04rem
		font-size 1rem
		margin-right 0.64rem
		margin-bottom .64rem
		background-color gris-claro
		vertical-align top
		padding-bottom 1%

		&:nth-child(2n)
			margin-right 0rem
		
		div
			width 71%
			font-size 0px
			vertical-align top

			&:first-child
				width 25%
				margin-top 1%
				margin-left 1%

			.user-pict
				width 90%
				padding 5%
				margin 1% 0 5% 1%

			.icon-star
				font-size 0.65rem
				margin-right 0.1rem
				cursor pointer
				&:last-child
					margin-right 0rem
				&:hover
					color yellow

			.user-name
				display block
				border-bottom 1px solid gris-oscuro
				font-size 1rem
				margin-bottom 2px
				font-weight bold

			.deco-count
				width 47.5%		
				padding 1% 
				padding-bottom 0
				.following-count
				.followers-count
				.following
				.followers
					font-size 1rem
			.follow-user
				font-size 1.1rem 
				width 49.5%
				background-color verde-titulos
				color white
				text-align center
				float right
				margin-top 1%
				cursor pointer

.deco-count
	background-color verde-deco
	display inline-block
	vertical-align top
	&:nth-child(3)					
		margin-left 1%

	.following-count
	.followers-count
		background-color gris-claro
		color verde-claro
		display block
		text-align center
		line-height 1rem
	.following
	.followers
		display block
		text-align center


.user-pict
	width 90%
	padding 5%
	background-color crema

.user-name
	color gris-medio

.product-name
	font-weight bold
	border-right 2px solid 
	padding-right 5px

.follow
	width 90%
	background-color mamei
	text-align center
	padding 5%
	margin-top 10px
	color white
	

.button
	background verde-claro
	padding 10px

.block
	display block

.inline-block
	display inline-block

.relative
	position relative

.absolute
	position absolute
 